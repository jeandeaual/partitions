{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Serve Jekyll",
            "type": "shell",
            "command": "bundle exec jekyll serve --livereload",
            "options": {
                "cwd": "${workspaceFolder}/site"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "isBackground": true
        },
        {
            "label": "Jekyll doctor",
            "type": "shell",
            "command": "bundle exec jekyll doctor",
            "options": {
                "cwd": "${workspaceFolder}/site"
            },
            "group": "test",
            "isBackground": false
        },
        {
            "label": "Build Jekyll",
            "type": "shell",
            "command": "bundle exec jekyll build",
            "options": {
                "cwd": "${workspaceFolder}/site"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
